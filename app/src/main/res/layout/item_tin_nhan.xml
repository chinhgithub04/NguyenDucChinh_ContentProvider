<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#211D1D"/>

    <TextView
        android:id="@+id/nguoiGui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Nguyễn Đức Chinh"
        android:textSize="17sp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/noiDung"
        android:layout_width="0dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Nguyễn Đức Chinh Nguyễn Đức Chinh Nguyễn Đức Chinh Nguyễn Đức Chinh Nguyễn Đức Chinh Nguyễn Đức Chinh Nguyễn Đức Chinh Nguyễn Đức Chinh Nguyễn Đức Chinh"
        android:textSize="15sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@+id/nguoiGui"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nguoiGui" />

    <TextView
        android:id="@+id/thoiGian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="30/10/2024"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/noiDung"
        app:layout_constraintTop_toBottomOf="@+id/noiDung" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000000"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/thoiGian" />

</androidx.constraintlayout.widget.ConstraintLayout>